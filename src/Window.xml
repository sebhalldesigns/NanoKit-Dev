<Window Title="Window Generated From XML" Height="400" Width="1000">
    <DockPanel Name="DockPanel">
        <Button Name="MyButton" DockPanel.Dock="Top" Height="100" Background="Orange" Click="TopClickFunction">
            Top Button
        </Button>

        <Button DockPanel.Dock="Left" Width="100" Background="Magenta" Click="LeftClickFunction">
            Left
        </Button>

        <Button DockPanel.Dock="Right" Width="100" Background="Magenta" Click="RightClickFunction"> 
            Right
        </Button>

        <Button DockPanel.Dock="Bottom" Height="100" Background="Magenta" Click="BottomClickFunction">
            Bottom
        </Button>

        <Button DockPanel.Dock="Bottom" Background="LightGray">
            Center
        </Button>
  
        
    </DockPanel>
</Window>                